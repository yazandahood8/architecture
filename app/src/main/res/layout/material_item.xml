<!-- res/layout/material_item.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Material Name -->
        <TextView
            android:id="@+id/materialName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Material Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Material Description -->
        <TextView
            android:id="@+id/materialDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="High-quality material description goes here."
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintTop_toBottomOf="@id/materialName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="4dp" />

        <!-- Divider line -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/textColorSecondary"
            app:layout_constraintTop_toBottomOf="@id/materialDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Material Type -->
        <TextView
            android:id="@+id/materialType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Type: Building Material"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintTop_toBottomOf="@id/materialDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="8dp" />

        <!-- Material Quantity -->
        <TextView
            android:id="@+id/materialQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quantity: 50"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintTop_toBottomOf="@id/materialType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="4dp" />

        <!-- Material Price -->
        <TextView
            android:id="@+id/materialPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price: $25.0"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintTop_toBottomOf="@id/materialQuantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
